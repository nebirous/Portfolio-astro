---

<footer id="normal-sidebar" class="no-print dark:text-gray-900">
  <div class="vertical-text">Pulsa <kbd>Ctrl</kbd> + <kbd>K</kbd> para abrir la paleta de comandos.</div>
</footer>

<div id="footer-button" class="no-print dark:text-gray-400">
  <span style="margin-right: 8px">
    <svg width="32" height="32" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke="none" d="M0 0h24v24H0z" fill="none">
      </path>
      <path d="M7 9a2 2 0 1 1 2 -2v10a2 2 0 1 1 -2 -2h10a2 2 0 1 1 -2 2v-10a2 2 0 1 1 2 2h-10" 
      stroke="currentColor" 
      stroke-width="1.5" 
      fill="none" 
      stroke-linecap="round" 
      stroke-linejoin="round">
      </path>
    </svg>
  </span>
</div>

<div
  id="hotkeypad"
  data-placeholder="Buscar comando"
  data-icons={JSON.stringify(icons)}
>
</div>

<script>
  interface Info {
    id: string
    section: string
    title: string
    url: string
    icon: string
    hotkey: string
    handler?: () => void
  }

  import HotKeyPad from 'hotkeypad'

  const hotkeypad = new HotKeyPad()
  
  // Get the rendered icons from the data attribute
  const icons = JSON.parse(hotkeypad.instance.getAttribute("data-icons") ?? "{}")

  hotkeypad.setCommands([
    {
      id: "print-cv",
      title: "Print CV",
      icon: icons.pdf,
      hotkey: "ctrl+P",
      section: "Acciones",
      handler: () => {
        window.print()
      }
    },
    {
      id: "github",
      title: "Visit Github",
      icon: icons.github,
      hotkey: "ctrl+G",
      section: "Social",
      handler: () => {
        window.open("your-github-url", "_blank")
      }
    },
    {
      id: "linkedin",
      title: "Visit LinkedIn",
      icon: icons.linkedin,
      hotkey: "ctrl+L",
      section: "Social",
      handler: () => {
        window.open("your-linkedin-url", "_blank")
      }
    }
  ])

  const footerButton = document.getElementById("footer-button")
  footerButton?.addEventListener("click", () => {
    var event = new KeyboardEvent("keydown", {
      key: "K",
      code: "KeyK",
      keyCode: 75,
      which: 75,
      ctrlKey: true,
      altKey: false,
      shiftKey: false,
      metaKey: false
    })

    document.dispatchEvent(event)
  })
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (min-width: 601px) {
    #normal-sidebar {
      display: block;
      position: fixed;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      writing-mode: vertical-lr;
      padding: 1rem;
      font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Monaco, Consolas, 'Courier New', monospace;
      font-size: 0.75rem;
      @apply text-gray-600 dark:text-gray-300;
    }

    .vertical-text {
      display: flex;
      align-items: center;
      gap: 0.4rem; 
    }

    .vertical-text kbd {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-size: 0.65rem;
      max-width: 1.2rem;
      padding: 0.2rem 0.4rem;
      border-radius: 0.25rem;
      border: 1px solid rgb(156 163 175 / 0.3);
      box-shadow: 0 1px 1px rgb(0 0 0 / 0.1);
      @apply bg-gray-50 dark:bg-gray-800 
             text-gray-600 dark:text-gray-300
             font-medium;
    }

    #footer-button {
      display: none;
    }
  }

  :global(.dark) #hotkeypad {
    @apply bg-[#13151a] text-gray-200 border-gray-700;
  }

  :global(.dark) #hotkeypad input {
    @apply bg-[#1a1d24] text-gray-200 border-gray-700;
  }

  :global(.dark) #hotkeypad .hotkeypad-item {
    @apply hover:bg-[#1a1d24] text-gray-300;
  }

  :global(.dark) #hotkeypad .hotkeypad-shortcut {
    @apply text-gray-500;
  }

  :global(.dark) #hotkeypad .hotkeypad-section-title {
    @apply text-gray-400;
  }

  :global(.dark) #hotkeypad .hotkeypad-footer {
    @apply text-gray-500 border-t border-gray-700;
  }

  :global(.dark) #hotkeypad kbd {
    @apply bg-[#1a1d24] text-gray-300 border-gray-700;
  }

  /* Add these CSS variable overrides for dark mode */
  :global(.dark) {
    --hotkeypad-bg-kbd: #1a1d24;
    --hotkeypad-bg-backdrop: rgba(0, 0, 0, 0.7);
    --hotkeypad-bg-container: #13151a;
    --hotkeypad-bg-item-hover: #1a1d24;
    --hotkeypad-border-container: #2e2e2e;
    --hotkeypad-border-container-hover: #3f3f3f;
    --hotkeypad-fg-muted: #9ca3af;
  }

</style>