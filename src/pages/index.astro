---
import AboutMe from '@/components/AboutMe.astro';
import Experience from '@/components/Experience.astro';
import Footer from '@/components/Footer.astro';
import Profile from '@/components/Profile.astro';
import Projects from '@/components/Projects.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import SocialPill from '@/components/SocialPill.astro';
import Briefcase from '@/components/icons/Briefcase.astro';
import Code from '@/components/icons/Code.astro';
import Github from '@/components/icons/Github.astro';
import Linkedin from '@/components/icons/Linkedin.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout
  title="I'm David Salguero - Full-Stack Web Developer"
  description="Hello, I am David Salguero from Granada üá™üá∏. Full-Stack web developer with more than 5 years of experience"
>
  <main class="px-4 h-[80vh] w-screen bg-no-repeat bg-center bg-cover bg-[url('/public/intro-light.webp')] dark:bg-[url('/public/intro.webp')] relative">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-white dark:to-[#13151a] pointer-events-none"></div>
    
    <SectionContainer
      class="intro flex mx-auto text-center h-[80vh] relative z-10"
    >
      <div class="w-full m-auto">
        <img
          class="rounded-full size-48 mx-auto mb-10"
          src="https://nebirous.github.io/Portfolio/img/avatar.jpg"
          alt="Foto David Salguero"
        />
        <h1
          class="dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold gap-x-4 pb-4 text-center"
        >
          David Salguero Garc√≠a
        </h1>
        <h2 class="text-xl lg:text-2xl text-center pb-4 font-medium">
          <span class="dark:opacity-90">Full-Stack Developer</span>,
          <span class="dark:opacity-70">Photographer and Tech Enthusiast</span>
        </h2>

        <nav
          class="flex gap-4 mx-auto w-full items-center justify-center mt-6 flex-wrap"
        >
          <SocialPill href="https://www.linkedin.com/in/nebirous/">
            <Linkedin class="size-3 lg:size-6" /> Linkedin
          </SocialPill>
          <SocialPill href="https://www.github.com/nebirous/">
            <Github class="size-3 lg:size-6" /> Github
          </SocialPill>
          <!-- <SocialPill href="https://www.flickr.com/fotonebs">
          <Flickr class="size-6" /> Flickr
        </SocialPill> -->
        </nav>
      </div>
    </SectionContainer>
    <SectionContainer id="experience" class="mt-12 container lg:max-w-4xl md:max-w-2xl bg-white dark:bg-[#13151a] relative z-20">
      <h2 class="text-4xl font-semibold flex gap-4 mb-12 items-center">
        <Briefcase class="size-9" />Work Experience
      </h2>
      <Experience />
    </SectionContainer>
    <!-- <SectionContainer id="experience">
      <h2 class="text-4xl font-semibold flex gap-4 mb-12 items-center">
        <Code class="size-9" />Projects
      </h2>
      <Projects />
    </SectionContainer> -->
    <SectionContainer id="about" class="container lg:max-w-4xl md:max-w-2xl">
      <h2 class="text-4xl font-semibold flex gap-4 mb-12 items-center">
        <Profile class="size-9" />About me
      </h2>
      <AboutMe />
    </SectionContainer>
    <Footer />
  </main>
</Layout>
